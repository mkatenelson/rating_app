<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Places Reviewed</h1>
    <p>Hashtag hoodie mumblecore selfies. Authentic keffiyeh leggings Kickstarter, narwhal jean shorts XOXO Vice Austin cardigan. Organic drinking vinegar freegan pickled.</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <div class="row">
    <div class="col-sm-6 col-md-3">
      <%= form_tag search_places_path, method: :get, class: "form", role: "search" do %>
        <p>
          <%= submit_tag "Search Your Places", name: nil, class: "btn btn-default" %>
          <%= text_field_tag :search, params[:search], class: "form-control" %>
        </p>
      <% end %>
    </div>
  </div>
  <% @places.each do |place| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag place.image.url(:medium), class: 'image'), place %>
      </div>
    </div>
  <% end %>
</div>
